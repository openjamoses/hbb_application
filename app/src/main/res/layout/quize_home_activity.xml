<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/b_image"
    tools:context="com.example.john.hbb.activities.home.MainActivity"
    >

    <include layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_quiz_number"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rater"
                    android:visibility="gone"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/quiz1_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:gravity="fill_horizontal"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/ic_list_white_24dp"
                        android:paddingRight="10dp"
                        android:text="@string/quiz_no_1"
                        android:drawableLeft="@android:drawable/checkbox_on_background" />

                    <Button
                        android:id="@+id/expandableButton1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:textColor="@android:color/white"
                        android:paddingLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:paddingTop="10dp"
                        android:gravity="fill_horizontal"
                        android:drawableRight="@mipmap/ic_list_white_24dp"
                        android:paddingRight="10dp"
                        android:text="@string/quiz_no_2"
                        />


                    <Button
                        android:id="@+id/expandableButton3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:textColor="@android:color/white"
                        android:layout_below="@+id/expandableLayout1"
                        android:background="@drawable/button"
                        android:drawableRight="@mipmap/ic_list_white_24dp"
                        android:layout_marginTop="10dp"
                        android:gravity="fill_horizontal"
                        android:paddingRight="10dp"
                        android:text="@string/quiz_no_3"
                        />

                </LinearLayout>

            </ScrollView>

            <include layout="@layout/footer"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>